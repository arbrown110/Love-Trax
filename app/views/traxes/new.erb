<h1>Tell me all about it!!</h1>


<form action="/trax" method= "POST">
    <p>
    <label for= "name">Name:</label>
    <input type="text" name="name" id="name"  />
    </p>
    <p>
    <label for= "date">Date:</label>
    <input type="date" name="date" id="date">
    </p>
    <p>
    <label for= "score">Score:</label>
    <input type="range" name="score" id="score" min="0" max="5" />
    </p>
 
    <p>
    <label for= "location">Location:</label>
    <input type="text" name="location" id="location" />
    </p>
    <p>
    <label for= "number">Phone Number:</label>
     <input type="tel" id="number" name="number" placeholder="123-454-6783" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
     
    </p>
    <p>
    <label for= "interest">Interest:</label>
    <input type="radio" name="interest" id="yes" value="yes" />
    <label for="yes">YES</label>
    <input type="radio" name="interest" id="no" value="no" />
    <label for="no">NO</label>
    </p>
    <br><br>

<input class="btn btn-primary" type="submit" name="create" value="Create">
<input class="btn btn-primary" type="submit" name="reset" value="Reset">
</form>